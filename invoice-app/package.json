{
  "name": "invoice-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@xero-replica/web",
    "dev:api": "npm run dev --workspace=@xero-replica/api",
    "dev:all": "npm run dev & npm run dev:api",
    "build": "npm run build --workspaces",
    "test": "npm run test:shared && npm run test:api && npm run test:web",
    "test:watch": "vitest",
    "test:web": "npm run test --workspace=@xero-replica/web",
    "test:api": "npm run test --workspace=@xero-replica/api",
    "test:shared": "npm run test --workspace=@xero-replica/shared",
    "db:push": "npm run db:push --workspace=@xero-replica/api",
    "db:generate": "npm run db:generate --workspace=@xero-replica/api",
    "lint": "eslint"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.0",
    "vitest": "^4.0.0"
  }
}
